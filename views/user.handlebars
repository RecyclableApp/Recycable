            <br>
            <input type="radio" name="type" value="aluminum" class="type" {{#is user.type "aluminum"}}checked{{/is}}> Aluminum
            <br>
            <input type="radio" name="type" value="glass" class="type" {{#is user.type "glass"}}checked{{/is}}> Glass
