<div class="container">
    <form id="update-user" data-id={{user.id}}>
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name-update" value="{{user.name}}">
        </div>
        <div class="form-group">
            <label for="phone">Phone:</label>
            <input type="text" class="form-control" id="phone-update" value="{{user.phone}}">
        </div>
        <div class="form-group">
            <label for="address">Address:</label>
            <input type="text" class="form-control" id="address-update" value="{{user.address}}">
        </div>
        <div class="form-group">
            <label for="type">Type:</label>
            <input type="text" class="form-control" id="type-update" value="{{user.type}}">
        </div>
        <div class="form-group">
            <label for="quantity_in_lbs">Quantity (in lbs):</label>
            <input type="text" class="form-control" id="quantity_in_lbs-update" value="{{user.quantity_in_lbs}}">
        </div>
        <div class="form-group">
            <label for="pickupStart">Pickup Start Time:</label>
            <input type="text" class="form-control" id="pickupStart-update" value="{{user.pickupStart}}">
        </div>
        <div class="form-group">
            <label for="pickupEnd">Pickup End Time:</label>
            <input type="text" class="form-control" id="pickupEnd-update" value="{{user.pickupEnd}}">
        </div>
        <button type="submit" class="btn btn-default">Update</button>

        <form action="/addUser" class="inline">
            <button class="btn btn-default">Go Back</button>
        </form>
        
    </form>
</div>

